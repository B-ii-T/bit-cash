<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BitCash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="options">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>
    <style name="unit_card">
        <item name="android:layout_height">111dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">25dp</item>
        <item name="cardCornerRadius">33dp</item>
    </style>
    <style name="unit_container">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/unit_exmpl_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="unit_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">50sp</item>
<!--        <item name="android:fontFamily">sans-serif-black</item>-->
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="unit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
<!--        <item name="android:fontFamily">sans-serif-black</item>-->
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>
    <style name="control_box">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="qnt_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>
    <style name="control_btn">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/control_btn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="recycler_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_above">@id/total_container</item>
        <item name="android:layout_below">@id/header</item>
    </style>
    <style name="fab">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:backgroundTint">@color/super_green</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="borderWidth">0dp</item>
    </style>
    <style name="total_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="total_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:text">000</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="total_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="new_unit_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="new_unit_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>>
        <item name="android:textSize">20sp</item>>
        <item name="android:textColor">@color/black</item>>
        <item name="android:textAlignment">center</item>>
<!--        <item name="android:fontFamily">sans-serif-black</item>>-->
        <item name="android:backgroundTint">@color/super_green</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="value_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:text">@string/da</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="splash_screen_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="splash_screen_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">75sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
</resources>